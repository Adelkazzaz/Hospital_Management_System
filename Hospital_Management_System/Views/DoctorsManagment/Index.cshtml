@using Hospital_Management_System.ViewModel;
@model List<StaffVM>
@{
	Layout = "_Alayout";
}
 
@if (Model.Any())
{
	<link rel="stylesheet" href="/css/style.css" />
	<div class="table-data">
		<div class="order">
			<div class="head">
				<h3>Doctors</h3>
				<i class='bx bx-search'></i>
				<i class='bx bx-filter'></i>
				<a class="btn btn-primary m-2" asp-action="AddDoctor">Add Doctor</a>
			</div>
			<table>
				<thead>
					<tr>
						<th>Doctor Full Name</th>
						<th>Department</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var doctor in Model)
					{
						<tr>
							<td>
								<img src="https://cdn-icons-png.flaticon.com/512/3774/3774293.png">
								<p>@doctor.Name</p>
							</td>
							<td>@doctor.DeptName</td>
							<td><a asp-action="DoctorDetails" asp-controller="DoctorsManagment" asp-route-id="@doctor.Id" class="btn btn-info">Details</a> </td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
}
