@model Hospital_Management_System.ViewModel.AppointmentUpdateViewModel

@{
    Layout = "_Patient";
}

<div class="content-section">
    <h2>Update Appointment Date</h2>

    <form method="post" asp-action="UpdateAppointmentDate" asp-route-appointmentId="@Model.Appointment.Id">
        <!-- Hidden field to pass the appointment ID -->
        <input type="hidden" name="appointmentId" value="@Model.Appointment.Id" />

        <div class="form-group">
            <label for="newDate">New Date/Time:</label>
            <input type="datetime-local" id="newDate" name="newDate" value="@Model.CurrentDate" required />
        </div>

        <button type="submit" class="btn btn-primary">Update Appointment</button>
    </form>
</div>
