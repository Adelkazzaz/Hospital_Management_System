@using demo.Models
@model MedicalRecord
@{
    Layout = "_Doctor";
    ViewData["Title"] = "Add Medical Records";
}


<div class="details">
    <div class="recentOrders">
        <div class="cardHeader">
            <h2>Add New Medical Record</h2>
        </div>

        <form asp-controller="Doctor" asp-action="AddMedicalRecord" class="form-section" method="post">
        <h1>Enter Record Details</h1>

        <label asp-for="Patient_id">Patient ID:</label>
            <input asp-for="Patient_id" required>

        <label asp-for="Diagnosis">Diagnosis:</label>
            <input asp-for="Diagnosis" required>

        <label asp-for="Treatment">Treatment:</label>
            <input asp-for="Treatment"  required>

        <label asp-for="StartDate">Start Date:</label>
            <input asp-for="StartDate" type="date"  style="color:var(--dark);" required>

        <label asp-for="EndDate">End Date:</label>
            <input asp-for="EndDate" type="date" style="color:var(--dark);" required>

        <label asp-for="Doctor_id">Doctor ID:</label>
            <input asp-for="Doctor_id" required>

        <button type="submit">Submit</button>
    </form>
</div>
</div>