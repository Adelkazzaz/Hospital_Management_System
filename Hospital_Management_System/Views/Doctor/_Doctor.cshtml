<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Hospital</title>
	<link rel="icon" type="image/x-icon" href="/favicon.ico">

	<!-- Boxicons -->
	<link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet">

	<link rel="stylesheet" href="/css/style.css">
</head>

<body>

	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bx-plus-medical'></i>
			<span class="text">Hospital</span>
		</a>
		<ul class="side-menu top">
			<li>
				<a asp-controller="Doctor" asp-action="DashBoard">
					<i class='bx bxs-dashboard'></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a asp-controller="Doctor" asp-action="DisplayAppointment">
					<i class='bx bxs-book'></i>
					<span class="text">View Appointments</span>
				</a>
			</li>
			<li>
				<a asp-controller="Doctor" asp-action="CreateAppointment">
					<i class='bx bxs-book-add'></i>
					<span class="text">Create Appointments</span>
				</a>
			</li>
			<li>
				<a asp-controller="Doctor" asp-action="AddMedicalRecord">
					<i class='bx bx-book-content'></i>
					<span class="text">Add Medical Records</span>
				</a>
			</li>
		</ul>

		<ul class="side-menu">
			<li>
				<a href="#" class="logout">
					<i class='bx bxs-log-out-circle'></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->
	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu'></i>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="profile">
				<img src="/img/people.png">
			</a>
		</nav>
		<!-- NAVBAR -->
		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Welcome Doctor</h1>
				</div>

			</div>
			@RenderBody()	
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->

	<script src="/js/script.js"></script>

</body>
</html>
