@using Hospital_Management_System.ViewModel
@model List<PatientAppointmentMedicalRecordVM>

@{
    Layout = "_Doctor";
    var detail = Model.FirstOrDefault();

}

<div class="details">

    <div class="recentOrders">
        <!-- ================ Appointment Details ================= -->
        <div class="content-section">
            <h2>Appointment Details</h2>
            <div class="details-item">
                <label>Appointment ID:</label>
                <span class="detail-value">@detail.Appointment.Id</span>
            </div>
            <div class="details-item">
                <label>Date/Time:</label>
                <span class="detail-value">@detail.Appointment.Date</span>
            </div>
            <div class="details-item">
                <label>Status:</label>
                <span class="detail-value status-confirmed">@detail.Appointment.Status</span>
            </div>
        </div>

        <!-- ================ Patient Details ================= -->
        <div class="content-section">
            <h2>Patient Details</h2>
            <div class="details-item">
                <label>Patient ID:</label>
                <span class="detail-value">789012</span>
            </div>
            <div class="details-item">
                <label>Name:</label>
                <span class="detail-value">John Doe</span>
            </div>
            <div class="details-item">
                <label>Phone Number:</label>
                <span class="detail-value">123-456-7890</span>
            </div>
            <div class="details-item">
                <label>Age:</label>
                <span class="detail-value">30</span>
            </div>
            <div class="details-item">
                <label>Gender:</label>
                <span class="detail-value">Male</span>
            </div>
            <div class="details-item">
                <label>Blood Type:</label>
                <span class="detail-value">O+</span>
            </div>
        </div>

        <!-- ================ Medical History ================= -->
        <div class="content-section">
            <h2>Medical History</h2>
            <div class="content-card">
                <div class="record-details">
                    <label>Record ID:</label>
                    <span class="detail-value">1</span>
                </div>
                <div class="record-details">
                    <label>Date:</label>
                    <span class="detail-value">2023-01-15</span>
                </div>
                <div class="record-details">
                    <label>Diagnosis:</label>
                    <span class="detail-value">Hypertension</span>
                </div>
                <div class="record-details">
                    <label>Treatment:</label>
                    <span class="detail-value">Prescription</span>
                </div>
            </div>
            
            <!-- Repeat for each medical record -->
            <div class="content-card">
                <div class="record-details">
                    <label>Record ID:</label>
                    <span class="detail-value">1</span>
                </div>
                <div class="record-details">
                    <label>Date:</label>
                    <span class="detail-value">2023-01-15</span>
                </div>
                <div class="record-details">
                    <label>Diagnosis:</label>
                    <span class="detail-value">Hypertension</span>
                </div>
                <div class="record-details">
                    <label>Treatment:</label>
                    <span class="detail-value">Prescription</span>
                </div>
            </div>
            <div class="content-card">
                <div class="record-details">
                    <label>Record ID:</label>
                    <span class="detail-value">1</span>
                </div>
                <div class="record-details">
                    <label>Date:</label>
                    <span class="detail-value">2023-01-15</span>
                </div>
                <div class="record-details">
                    <label>Diagnosis:</label>
                    <span class="detail-value">Hypertension</span>
                </div>
                <div class="record-details">
                    <label>Treatment:</label>
                    <span class="detail-value">Prescription</span>
                </div>
                
            </div>
            <div class="add-record-btn">
                <a asp-action="AddMedicalRecord" asp-controller="Doctor" class="button">Add New Record</a>
            </div>
        </div>
    </div>
</div>
